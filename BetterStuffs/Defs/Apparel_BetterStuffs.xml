<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!--================= 更好的防尘大衣 ================-->
    <ThingDef ParentName="ApparelMakeableBase">
    <defName>LOW_Apparel_BetterDuster</defName>
    <description>A modified duster, with extra pockets for tools. The more reasonable design made clothing lighter and more defensible, lined with small items that helped colonists do their jobs better. Must for work.</description>
    <label>better duster</label>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
    </recipeMaker>
    <graphicData>
		<texPath>Things/Apparel/BetterDuster/BetterDuster</texPath>
		<graphicClass>Graphic_Single</graphicClass>
	</graphicData>
	<tradeability>Sellable</tradeability>
  <thingCategories>
    <li>Apparel</li>
  </thingCategories>
  <generateCommonality>1</generateCommonality>
  <costStuffCount>300</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <MaxHitPoints>300</MaxHitPoints>
      <WorkToMake>20000</WorkToMake>
      <Mass>2.5</Mass>
      <StuffEffectMultiplierArmor>0.6</StuffEffectMultiplierArmor>
      <StuffEffectMultiplierInsulation_Cold>1.20</StuffEffectMultiplierInsulation_Cold>
      <StuffEffectMultiplierInsulation_Heat>1.70</StuffEffectMultiplierInsulation_Heat>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <equippedStatOffsets>
			<MoveSpeed>0.20</MoveSpeed>
      <SocialImpact>0.20</SocialImpact>
      <TradePriceImprovement>0.20</TradePriceImprovement>
      <PlantWorkSpeed>0.20</PlantWorkSpeed>
			<PlantHarvestYield>0.20</PlantHarvestYield>
			<AnimalGatherSpeed>0.20</AnimalGatherSpeed>
			<AnimalGatherYield>0.20</AnimalGatherYield>
			<CarryingCapacity>30</CarryingCapacity>
      <CookSpeed>0.20</CookSpeed>
			<Cleanliness>0.10</Cleanliness>
			<ButcheryFleshSpeed>0.20</ButcheryFleshSpeed>
			<ButcheryFleshEfficiency>0.10</ButcheryFleshEfficiency>
      <PainShockThreshold>0.10</PainShockThreshold>
			<HuntingStealth>0.20</HuntingStealth>
      <ConstructionSpeed>0.20</ConstructionSpeed>
			<ConstructSuccessChance>0.20</ConstructSuccessChance>
			<FixBrokenDownBuildingSuccessChance>0.20</FixBrokenDownBuildingSuccessChance>
      <MedicalSurgerySuccessChance>0.20</MedicalSurgerySuccessChance>
			<MedicalOperationSpeed>0.20</MedicalOperationSpeed>
			<MedicalTendQuality>0.20</MedicalTendQuality>
			<MedicalTendSpeed>0.10</MedicalTendSpeed>
      <ResearchSpeed>0.20</ResearchSpeed>
			<DrugCookingSpeed>0.20</DrugCookingSpeed>
			<DrugSynthesisSpeed>0.20</DrugSynthesisSpeed>
      <MeleeDodgeChance>0.20</MeleeDodgeChance>
      <WorkSpeedGlobal>0.20</WorkSpeedGlobal>
		</equippedStatOffsets>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/BetterDuster/BetterDuster</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>IndustrialAdvanced</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>10</weight>
          <only>(0.33,0.33,0.33)</only>
        </li>
        <li>
          <weight>10</weight>
          <only>(0.65,0.65,0.65)</only>
        </li>
        <li>
          <weight>30</weight>
          <only>(0.4,0.3,0.15)</only>
        </li>
        <li>
          <weight>6</weight>
          <min>(0.3,0.3,0.3)</min>
          <max>(0.5,0.5,0.5)</max>
        </li>
        <li>
          <weight>2</weight>
          <min>(0.5,0.5,0.5)</min>
          <max>(1,1,1)</max>
        </li>
      </options>
    </colorGenerator>
  </ThingDef>

